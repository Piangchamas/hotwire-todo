<%= form_with(model: todo, id: "#{dom_id(todo)}_form") do |form| %>
  <% if todo.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name, class: 'font-medium' %>
    <div class="flex flex-col min-[400px]:flex-row">
      <%= form.text_field :name, class: "shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full bg-transparent hover:border-blue-600" %>
      <%= form.submit class: "rounded-lg px-3 py-2 mt-2 ml-0 min-[400px]:ml-3 text-blue-600 hover:text-white border border-blue-600 hover:bg-blue-600 font-medium cursor-pointer" %>
    </div>
  </div>
  <div class="my-5">
    <% if todo.persisted? %>
  <div class="flex gap-3">
    <div class="flex-1">
      <%= form.label :due_date, "Due date", class: "mt-4 font-medium " %>
      <%= form.datetime_field :due_date, min: Date.tomorrow, class: "shadow rounded-md border border-gray-300 outline-none px-3 py-10 mt-2 bg-transparent hover:border-blue-600" %>
    </div>
    <div>
      </div>
    <div class="flex-1">
      <%= form.label :assigned_name, "Assigned to", class: "font-medium" %>
      <%= form.select :assigned_name, options_for_select([['Select', '', { disabled: true, selected: true }],'Net', 'Junior', 'Fiw', 'Pun', 'Dara', 'Tek'], todo.assigned_name), {}, class: "shadow rounded-md border border-gray-300 outline-none px-3 w-full py-2 mt-2 bg-transparent hover:border-blue-600" %>
    </div>
  </div>
  <% end %>
  </div>

<% end %>
